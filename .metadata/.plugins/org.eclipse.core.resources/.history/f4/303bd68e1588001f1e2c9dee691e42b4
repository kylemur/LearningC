#include <stdio.h>
#include <stdlib.h>

typedef struct {
	int value_1;
	int value_2;
} value_t;

int fxnG(value_t *valV)
{
	printf("The value before the change is %d\n", *valV);
	*valV = 3;
	printf("The value after the change is %d\n", *valV);
	return 0;
}

int main(void) {
	value_t v;
	v.value_1 = 5;
	v.value_2 = 6;

	fxnG(&v);

	return EXIT_SUCCESS;
}

