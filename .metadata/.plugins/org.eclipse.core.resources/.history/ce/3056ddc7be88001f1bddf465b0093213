#include <stdio.h>
#include <stdlib.h>

typedef struct {
	int accountNumber;
	char name[20];
	float balance;
	struct bank *next;
} bank;

void input(bank *account)
{
	printf("Enter the account number: ");
	scanf("%d", &account->accountNumber);

	printf("Enter the name of the account: ");
	scanf("%s", account->name);

	printf("Enter the balance in the account: ");
	scanf("%f", &account->balance);
}

void display(bank *account)
{
	printf("Account information:  number %d  name %s  balance $%.2f\n", account->accountNumber, account->name, account->balance);
}

void display_all(bank *account)
{
	while (account != NULL)
	{
		display(&account);
	}
}

int main(void) {

	bank *b = malloc(sizeof(bank));
	b->next = NULL;
	input(&b);

	bank *b2 = malloc(sizeof(bank));
	b2->next = NULL;
	input(&b2);
	b->next = b2;

	bank *b3 = malloc(sizeof(bank));
	b3->next = NULL;
	input(&b3);
	b2->next = b3;

	bank *a = malloc(sizeof(bank));
	while (a != NULL)
	{
		display(&a);
	}


	return EXIT_SUCCESS;
}
